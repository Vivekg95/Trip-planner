<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secret KEY sent on provided email ID"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Secret KEY to complete verification"
                    android:layout_below="@id/textView14"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/editVerificationSKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Enter Secret KEY"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:maxLength="6"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/btnVerifySKey"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="verify secret key"
                    android:textStyle="bold"
                    style="?android:textAppearanceSmall"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"/>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTP sent on provided Mobile Number"
                    android:gravity="center"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter OTP to complete verification"
                    android:layout_below="@id/textView14"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/editVerificationOTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter OTP"
                    android:inputType="number"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnVerifyOTP"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="verify otp"
                    android:textStyle="bold"
                    style="?android:textAppearanceSmall"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
